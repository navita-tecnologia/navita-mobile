							<dependency>
								<groupId>net.sourceforge.jtds</groupId>
								<artifactId>jtds</artifactId>
								<version>1.2.2</version>
							</dependency>
						</dependencies>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>wsgen</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>jaxws-maven-plugin</artifactId>
						<version>1.10</version>
						<executions>
							<execution>
								<id>wsgen</id>
								<goals>
									<goal>wsimport</goal>
								</goals>
								<configuration>
									<packageName>br.com.navita.mobile.ws.client</packageName>
									<sourceDestDir>./src/main/java</sourceDestDir>
									<wsdlUrls>
										<wsdlUrl>http://127.0.0.1:8889/navita-mobile-sample-app/ws?wsdl</wsdlUrl>
									</wsdlUrls>
									<extension>true</extension>
								</configuration>
							</execution>
						</executions>
					</plugin>

				</plugins>
			</build>
		</profile>
		<profile>
			<id>pushwsgen</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
