<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.codebehind.defaultPackage" value="struts-default" />
	<constant name="struts.codebehind.pathPrefix" value="/WEB-INF/" />
	<constant name="struts.devMode" value="true" />
	<include file="struts-default.xml" />

	<package name="default" extends="struts-default" namespace="/">
		<action name="login" class="br.com.navita.mobile.console.view.IndexAction">
			<result name="success" type="freemarker">/WEB-INF/view/login.ftl
			</result>
		</action>
		<action name="index" class="br.com.navita.mobile.console.view.ApplicationsAction">
			<result name="success" type="freemarker">/WEB-INF/view/applications.ftl</result>
		</action>
		<action name="admin" class="br.com.navita.mobile.console.view.AdminAction">
			<result name="success" type="freemarker">/WEB-INF/view/admin.ftl</result>
		</action>
		
		<action name="gateway" class="br.com.navita.mobile.console.view.GatewayAction">
			<result name="json" type="stream">
				<param name="contentType">text/javascript</param>
				<param name="inputName">inStream</param>
				<param name="contentDisposition">inline</param>
				<param name="allowCaching ">false</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="xml" type="stream">
				<param name="contentType">text/xml</param>
				<param name="inputName">inStream</param>
				<param name="contentDisposition">inline</param>
				<param name="allowCaching ">false</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>
		
		<action name="applications" class="br.com.navita.mobile.console.view.ApplicationsAction">
			<result name="success" type="freemarker">/WEB-INF/view/applications.ftl</result>
			<result name="input" type="freemarker">/WEB-INF/view/applicationsEdit.ftl</result>
			<result name="prepareCreate" type="freemarker">/WEB-INF/view/applicationsNew.ftl</result>
		</action>
		<action name="domains" class="br.com.navita.mobile.console.view.DomainsAction">
			<result name="success" type="freemarker">/WEB-INF/view/domains.ftl</result>
			<result name="input" type="freemarker">/WEB-INF/view/domainsEdit.ftl</result>
			<result name="createPrepare" type="freemarker">/WEB-INF/view/domainsNew.ftl</result>
			
		</action>
		
		<action name="deployable" class="br.com.navita.mobile.console.view.DeployAction">
		<result name="success" type="freemarker">/WEB-INF/view/deploy.ftl</result>
		<result name="input" type="freemarker">/WEB-INF/view/deploy.ftl</result>
		</action>
	</package>

</struts>