<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.codebehind.defaultPackage" value="struts-default" />
	<constant name="struts.codebehind.pathPrefix" value="/WEB-INF/" />
	<constant name="struts.devMode" value="true" />
	<include file="struts-default.xml" />

	<package name="default" extends="struts-default" namespace="/">
		<action name="login" class="br.com.navita.mobile.console.view.IndexAction">
			<result name="success" type="freemarker">/WEB-INF/view/login.ftl
			</result>
		</action>
		<action name="index"
			class="br.com.navita.mobile.console.view.ApplicationsAction">
			<result name="success" type="freemarker">/WEB-INF/view/applications.ftl
			</result>
		</action>
		<action name="admin" class="br.com.navita.mobile.console.view.AdminAction">
			<result name="success" type="freemarker">/WEB-INF/view/admin.ftl</result>
		</action>

		<action name="gateway" class="br.com.navita.mobile.console.view.GatewayAction">
			<result name="json" type="stream">
				<param name="contentType">application/json</param>
				<param name="inputName">inStream</param>
				<param name="contentDisposition">inline</param>
				<param name="allowCaching ">false</param>
				<param name="bufferSize">1024</param>
			</result>
			<result name="xml" type="stream">
				<param name="contentType">text/xml</param>
				<param name="inputName">inStream</param>
				<param name="contentDisposition">inline</param>
				<param name="allowCaching ">false</param>
				<param name="bufferSize">1024</param>
			</result>
		</action>

		<action name="applications"
			class="br.com.navita.mobile.console.view.ApplicationsAction">
			<result name="success" type="freemarker">/WEB-INF/view/applications.ftl
			</result>
			<result name="input" type="freemarker">/WEB-INF/view/applicationsEdit.ftl
			</result>
			<result name="prepareCreate" type="freemarker">/WEB-INF/view/applicationsNew.ftl
			</result>
		</action>

		<action name="connectors"
			class="br.com.navita.mobile.console.view.ConnectorsAction" >
			<result name="success" type="freemarker">/WEB-INF/view/connectors.ftl</result>			
			<result name="input" type="freemarker">/WEB-INF/view/connectors-add.ftl</result>	
			<result name="StaticConnector" type="freemarker">/WEB-INF/view/connectors/static-connector.ftl</result>
			<result name="SapConnector" type="freemarker">/WEB-INF/view/connectors/sap-connector.ftl</result>
			<result name="DataSourceConnector" type="freemarker">/WEB-INF/view/connectors/datasource-connector.ftl</result>
			<result name="ProxyConnector" type="freemarker">/WEB-INF/view/connectors/proxy-connector.ftl</result>
			<result name="WebServiceConnector" type="freemarker">/WEB-INF/view/connectors/webservice-connector.ftl</result>
			<result name="EjbConnector" type="freemarker">/WEB-INF/view/connectors/ejb-connector.ftl</result>				
		</action>
		<action name="staticconnector"
			class="br.com.navita.mobile.console.view.StaticConnectorAction" >
			<result name="StaticConnector" type="freemarker">/WEB-INF/view/connectors/static-connector.ftl</result>
		</action>
		<action name="datasourceconnector"
			class="br.com.navita.mobile.console.view.DataSourceConnectorAction" >
			<result name="DataSourceConnector" type="freemarker">/WEB-INF/view/connectors/datasource-connector.ftl</result>
		</action>
		<action name="sapconnector"
			class="br.com.navita.mobile.console.view.SapConnectorAction" >
			<result name="SapConnector" type="freemarker">/WEB-INF/view/connectors/sap-connector.ftl</result>
		</action>
		<action name="proxyconnector"
			class="br.com.navita.mobile.console.view.ProxyConnectorAction" >
			<result name="ProxyConnector" type="freemarker">/WEB-INF/view/connectors/proxy-connector.ftl</result>
		</action>
		<action name="webserviceconnector"
			class="br.com.navita.mobile.console.view.WebServiceConnectorAction" >
			<result name="WebServiceConnector" type="freemarker">/WEB-INF/view/connectors/webservice-connector.ftl</result>
		</action>
		<action name="ejbconnector"
			class="br.com.navita.mobile.console.view.EjbConnectorAction" >
			<result name="EjbConnector" type="freemarker">/WEB-INF/view/connectors/ejb-connector.ftl</result>
		</action>
		
		
		
		<action name="operations"
			class="br.com.navita.mobile.console.view.OperationsAction" >
			<result name="StaticOperation" type="freemarker">/WEB-INF/view/operations/static-operation.ftl</result>
			<result name="SapFunctionOperation" type="freemarker">/WEB-INF/view/operations/sap-operation.ftl</result>
			<result name="DataSourceQueryOperation" type="freemarker">/WEB-INF/view/operations/datasource-operation.ftl</result>			
		</action>
		<action name="staticoperation"
			class="br.com.navita.mobile.console.view.StaticOperationAction" >
			<result name="StaticOperation" type="freemarker">/WEB-INF/view/operations/static-operation.ftl</result>						
		</action>
		<action name="sapfunctionoperation"
			class="br.com.navita.mobile.console.view.SapFunctionOperationAction" >
			<result name="SapFunctionOperation" type="freemarker">/WEB-INF/view/operations/sap-operation.ftl</result>						
		</action>
		
		<action name="saptableaction" class="br.com.navita.mobile.console.view.SapTableAction">
		<result name="input" type="freemarker">/WEB-INF/view/operations/sap-table.ftl</result>
		</action>
		
		<action name="datasourcequeryoperation"
			class="br.com.navita.mobile.console.view.DataSourceQueryOperationAction" >
			<result name="DataSourceQueryOperation" type="freemarker">/WEB-INF/view/operations/datasource-operation.ftl</result>						
		</action>
		
		
		
		
		
		<action name="domains" class="br.com.navita.mobile.console.view.DomainsAction">
			<result name="success" type="freemarker">/WEB-INF/view/domains.ftl</result>
			<result name="input" type="freemarker">/WEB-INF/view/domainsEdit.ftl
			</result>
			<result name="createPrepare" type="freemarker">/WEB-INF/view/domainsNew.ftl
			</result>

		</action>

		<action name="licenses" class="br.com.navita.mobile.console.view.LicenseAction">
			<result name="success" type="freemarker">/WEB-INF/view/license.ftl</result>
			<result name="input" type="freemarker">/WEB-INF/view/licenseBundle.ftl
			</result>
			<result name="usage" type="freemarker">/WEB-INF/view/licenseBundleUse.ftl
			</result>
		</action>

		<action name="teste" class="br.com.navita.mobile.console.view.TesteAction">
			<result name="success" type="freemarker">/WEB-INF/view/teste.ftl</result>
		</action>

	</package>

</struts>