<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ctx="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
			http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
			http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
			http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd
			http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.xsd"
	default-autowire="byName">

	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="mobileEntityManagerFactory" />
	</bean>



	<tx:annotation-driven />
	<ctx:annotation-config />
	<aop:aspectj-autoproxy />



	<!--
		<jee:jndi-lookup id="dataSource"
		jndi-name="jdbc/navitaMobileDataSource" />
	-->


	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.apache.derby.jdbc.ClientDriver" />
		<property name="url" value="jdbc:derby://127.0.0.1:1527/mobiledb" />
		<property name="username" value="APP" />
		<property name="password" value="APP" />
	</bean>
	<!-- 
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver" />
		<property name="url" value="jdbc:jtds:sqlserver://washburn:1433/navita-mobile" />
		<property name="username" value="sa" />
		<property name="password" value="navita" />
	</bean>
	
	
	 -->


	<bean id="mobileEntityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="persistenceUnitName" value="mobilePersistenceUnit" />
		<property name="dataSource" ref="dataSource" />
	</bean>


	<bean id="licenseBundleTypeRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.LicenseBundleType" />
	</bean>
	<bean id="licenseBundleRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.LicenseBundle" />
	</bean>

	<bean id="licenseActivationRepository"
		class="br.com.navita.mobile.console.dao.jpa.impl.LicenseActivationDAO"
		lazy-init="true">
	</bean>


	<bean id="connectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.Connector" />
	</bean>

	<bean id="operationRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.Operation" />
	</bean>

	<bean id="staticConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.StaticConnector" />
	</bean>

	<bean id="staticOperationRepository"
		class="br.com.navita.mobile.console.dao.jpa.impl.GenericOperationDAO"></bean>
	<bean id="sapFunctionOperationRepository"
		class="br.com.navita.mobile.console.dao.jpa.impl.GenericOperationDAO"></bean>
	<bean id="dataSourceQueryOperationRepository"
		class="br.com.navita.mobile.console.dao.jpa.impl.GenericOperationDAO"></bean>

	<bean id="dataSourceConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.DataSourceConnector" />
	</bean>
	<bean id="ejbConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.EjbConnector" />
	</bean>

	<bean id="sapConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.SapConnector" />
	</bean>

	<bean id="proxyConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.ProxyConnector" />
	</bean>

	<bean id="webServiceConnectorRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.WebServiceConnector" />
	</bean>


<bean id="sapParameterRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.SapParameter" />
	</bean>
	
	
	<bean id="sapTableRepository" class="br.com.navita.mobile.console.dao.jpa.impl.BaseEntityDAO"
		lazy-init="true">
		<constructor-arg
			value="br.com.navita.mobile.console.domain.entity.SapTable" />
	</bean>
	<!-- end repositories -->

	<bean id="baseConnectorService"
		class="br.com.navita.mobile.console.service.impl.BaseConnectorService" />

	<bean id="baseOperationService"
		class="br.com.navita.mobile.console.service.impl.BaseOperationService" />

	<bean id="staticConnectorService"
		class="br.com.navita.mobile.console.service.impl.StaticConnectorService" />

	<bean id="dataSourceConnectorService"
		class="br.com.navita.mobile.console.service.impl.DataSourceConnectorService" />

	<bean id="sapConnectorService"
		class="br.com.navita.mobile.console.service.impl.SapConnectorService" />

	<bean id="proxyConnectorService"
		class="br.com.navita.mobile.console.service.impl.ProxyConnectorService" />

	<bean id="webServiceConnectorService"
		class="br.com.navita.mobile.console.service.impl.WebServiceConnectorService" />

	<bean id="ejbConnectorService"
		class="br.com.navita.mobile.console.service.impl.EjbConnectorService" />

	<bean id="staticOperationService"
		class="br.com.navita.mobile.console.service.impl.StaticOperationService" />

	<bean id="sapFunctionOperationService"
		class="br.com.navita.mobile.console.service.impl.SapFunctionOperationService" />

	<bean id="dataSourceQueryOperationService"
		class="br.com.navita.mobile.console.service.impl.DataSourceQueryOperationService" />

	<!-- end services -->

	<bean id="commonConfiguration"
		class="br.com.navita.mobile.console.dao.NavitaMobileConfiguration"
		init-method="setDelimiterParsingDisabled">
		<constructor-arg index="0" ref="dataSource"></constructor-arg>
		<constructor-arg index="1" type="java.lang.String"
			value="mobileconfig"></constructor-arg>
		<constructor-arg index="2" type="java.lang.String"
			value="id"></constructor-arg>
		<constructor-arg index="3" type="java.lang.String"
			value="value"></constructor-arg>

	</bean>

	<bean id="ldapService" class="br.com.navita.mobile.console.bizz.LdapServiceImpl" />
	<bean id="msLoginService" class="br.com.navita.mobile.console.bizz.MSWindowsLoginService" />
	<bean id="ldapConfigDAO" class="br.com.navita.mobile.console.dao.LdapConfigDAO" />
	<bean id="dynamicExecutorLookupService"
		class="br.com.navita.mobile.console.jar.DynamicExecutorLookupServiceImpl" />
	<bean id="licenseService"
		class="br.com.navita.mobile.console.service.impl.LicenseServiceImpl" />

	<bean id="sapMobileProcessor" class="br.com.navita.mobile.console.sap.SapMobileProcessor" />
	<bean id="staticProcessor" class="br.com.navita.mobile.console.stat.StaticProcessor" />
	<bean id="dsAppProcessor"
		class="br.com.navita.mobile.console.jdbc.DataSourceAppProcessor" />
	<bean id="jdbcAppProcessor" class="br.com.navita.mobile.console.jdbc.JdbcAppProcessor" />
	<bean id="deployableProcessor" class="br.com.navita.mobile.console.jar.DeployableProcessor" />
	<bean id="ejbProcessor" class="br.com.navita.mobile.console.remote.EjbProcessor" />
	<bean id="genericWsProcessor" class="br.com.navita.mobile.ws.processor.GenericWsProcessor" />
	<bean id="proxyServletProcessor"
		class="br.com.navita.mobile.console.proxy.ProxyServletProcessor" />

	<security:http>
		<security:intercept-url pattern="/**" access="ROLE_USER" />
		<security:intercept-url pattern="/css/**"
			filters='none' />
		<security:intercept-url pattern="/images/**"
			filters='none' />
		<security:intercept-url pattern="/login.action*"
			filters='none' />
		<security:intercept-url pattern="/gateway.action*"
			filters='none' />
		<security:intercept-url pattern="/push*/**"
			filters='none' />
		<security:intercept-url pattern="/teste/**"
			filters='none' />
		<security:intercept-url pattern="/assets/**"
			filters='none' />

		<security:form-login login-page="/login.action"
			default-target-url="/index.action" />
		<security:anonymous />
		<security:http-basic />
		<security:logout />
		<security:remember-me />
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider>
			<security:password-encoder hash="md5" />
			<security:jdbc-user-service
				data-source-ref="dataSource" />
		</security:authentication-provider>
	</security:authentication-manager>

	<bean id="mobileApplicationDAO"
		class="br.com.navita.mobile.console.dao.MobileApplicationDAOImpl"></bean>

	<bean id="gatewayDispatcher" class="br.com.navita.mobile.console.NavitaMobileDispatcher" />


	<!--
		<security:authentication-provider> <security:password-encoder
		hash="md5" /> <security:user-service> <security:user name="admin"
		password="navita" authorities="ROLE_ADMINISTRATOR, ROLE_USER" />
		</security:user-service> </security:authentication-provider>
	-->

	<bean id="checkOldSession"
		class="br.com.navita.mobile.console.listener.MobileSessionTimeoutScheduler"></bean>

	<bean id="scheduledTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<!-- wait 10 seconds before starting repeated execution -->
		<property name="delay" value="10000" />
		<!-- run every 30 seconds -->
		<property name="period" value="30000" />
		<property name="timerTask" ref="checkOldSession" />
	</bean>

	<bean id="timerFactory" class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
			<list>
				<!-- see the example above -->
				<ref bean="scheduledTask" />
			</list>
		</property>
	</bean>

	<!-- WS -->

	<bean id="dynaClient" scope="prototype"
		class="br.com.navita.mobile.ws.client.DynamicClient" init-method="createService">
		<constructor-arg>
			<bean class="java.net.URL"></bean>
		</constructor-arg>
		<property name="namespaceUri" value="http://ws.mobile.navita.com.br/" />
		<property name="serviceName" value="singlePointService" />
		<property name="portName" value="singlePointPort" />
		<property name="lookupServiceOnStartup" value="false" />
	</bean>


	<bean id="httpClient" class="br.com.navita.mobile.console.util.HttpClientUtil" />


</beans>